<h1>Listing vlans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gateway</th>
      <th>Netmask</th>
      <th>Tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vlans.each do |vlan| %>
      <tr>
        <td><%= vlan.name %></td>
        <td><%= vlan.gateway %></td>
        <td><%= vlan.netMask %></td>
        <td><%= vlan.tag %></td>
        <td><%= link_to 'Show', vlan %></td>
        <td><%= link_to 'Edit', edit_vlan_path(vlan) %></td>
        <td><%= link_to 'Destroy', vlan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

